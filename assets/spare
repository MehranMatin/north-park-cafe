<!-- navigation -->
 <nav>
    <button class="tabs">
      <button class="tablinks" onclick="clickHandle(event, 'About')">About</button>
      <button class="tablinks" onclick="clickHandle(event, 'Contact')">Contact</button>
      <button class="tablinks" onclick="clickHandle(event, 'Reservation')">Reservation</button>
    </nav>
  
    <div id="About" class="tabcontent">
      <h2>About</h2>
      <p>We created a way better way for you to book your appointments without being on hold</p>
    </div>
  
    <div id="Contact" class="tabcontent">
      <h2>Contact</h2>
      <p>Email: softreservations@gmail.com</p>
    </div>
  
    <div id="Reservation" class="tabcontent">
      <h2>None.</h2>
  </div>
  
  <script>
  function clickHandle(evt, Reservee) {
    let i, tabcontent, tablinks;
  
    // This is to clear the previous clicked content.
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
  
    // Set the tab to be "active".
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
  
    // Display the clicked tab and set it to active.
    document.getElementById(Reserev).style.display = "block";
    evt.currentTarget.className += " active";
  }
  </script>



        <nav>
            <a href="#About">About</a>
